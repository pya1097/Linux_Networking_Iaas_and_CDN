#cloud-config
disable_root: false
ssh_authorized_keys:
- ssh-rsa 
users:
- default
- name: root
  lock_passwd: false
  plain_text_passwd: 'root'
  
write_files:
  - path: /etc/netplan/50-cloud-init.yaml
    content: |
        network:
         version: 2
         ethernets:
          {{ interface_name }}:
           addresses: [ {{ vm_ip }} ]

  - path: /root/main.py
    content: |
{{ content }}


runcmd:
  - ['sh', '-c', 'netplan generate']
  - ['sh', '-c', 'netplan apply']
  - ['sh', '-c', 'apt update']
  - ['sh', '-c', 'sudo ip route add default via  {{ subnet_ip }} dev enp1s0 ']
  - ['sh', '-c', 'sudo apt install python3-flask']
  - ['sh', '-c', 'python3 main.py']